# rule to generate rule
{   ?x a       sp:Construct ;
      sp:templates ?temps ;
      sp:where ?where.
 	    ?where aux:createGraph ?g1.
      ?temps aux:handleTriples ?g2
	}=>{?g1=>?g2. }.

  # rule to generate rule
  {   ?x a       sp:Ask ;
        sp:where ?where.
   	   ?where aux:createGraph ?g1.
  	}=>{?g1 => {[] ex:result true}. {(1 ?g1 ()) log:collectAllIn ?scope}=>{[] ex:result false}
    }.


